<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x108">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_main_classification_indicator"
        android:layout_width="@dimen/x8"
        android:layout_height="@dimen/x26"
        android:background="@drawable/shape_main_classificaiton"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginTop="@dimen/x56"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_classification_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x16"
        android:text="@string/main_classification_face"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/x32"
        app:layout_constraintBottom_toBottomOf="@id/iv_main_classification_indicator"
        app:layout_constraintLeft_toRightOf="@id/iv_main_classification_indicator"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_main_classification_indicator" />

</androidx.constraintlayout.widget.ConstraintLayout>